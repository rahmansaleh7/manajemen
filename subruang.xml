<odoo>
	<data>

		<record id="view_manajemen_subruang_tree" model="ir.ui.view">
			<field name="name">manajemen.subruang.tree</field>
			<field name="model">manajemen.subruang</field>
			<field name="type">tree</field>
			<field name="priority" eval="8" />

			<field name="arch" type="xml">
				<tree string="Sub Ruang">
					<field name="no" />
					<field name="ruang" />
					<field name="nosubruang" />
					<field name="name" />
				</tree>
			</field>
		</record>

		<!-- Form -->
		<record id="view_manajemen_subruang_form" model="ir.ui.view">
			<field name="name">manajemen.subruang.form</field>
			<field name="model">manajemen.subruang</field>
			<field name="type">form</field>
			<field name="priority" eval="8" />

			<field name="arch" type="xml">
				<form string="Sub Ruang">
					<sheet>
						<div class="oe_title">
							<label for="name"
									string="Nama Sub Ruang"/>
							<h1><field name="name"/></h1>
						</div>
						<group>
							<field name="no" />
							<field name="ruang" />
							<field name="nosubruang" />
						</group>
					</sheet>
				</form>
			</field>
		</record>

	</data>
</odoo>