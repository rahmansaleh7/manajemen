<odoo>
	<data>

		<record id="view_manajemen_ruang_tree" model="ir.ui.view">
			<field name="name">manajemen.ruang.tree</field>
			<field name="model">manajemen.ruang</field>
			<field name="type">tree</field>
			<field name="priority" eval="8" />

			<field name="arch" type="xml">
				<tree string="Ruang">
					<field name="no" />
					<field name="lokasi" />
					<field name="noruang" />
					<field name="name" />					
				</tree>
			</field>
		</record>

		<record id="view_manajemen_ruang_form" model="ir.ui.view">
			<field name="name">manajemen.ruang.form</field>
			<field name="model">manajemen.ruang</field>
			<field name="type">form</field>
			<field name="priority" eval="8" />

			<field name="arch" type="xml">
				<form string="Ruang">
					<sheet>
						<div class="oe_title">
							<label for="name"
									string="Nama Ruang"/>
							<h1><field name="name"/></h1>
						</div>
						<group>
							<field name="no" />
							<field name="lokasi" />
							<field name="noruang" />
						</group>
					</sheet>
				</form>
			</field>
		</record>

	</data>
</odoo>